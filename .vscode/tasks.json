{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "qmake-gen",
            "detail": "Generates a new makefile",
            "command": "/usr/bin/qmake",
            "args": [
                "${workspaceFolder}/quantum-engine.pro"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "make-build",
            "detail": "Makes the project",
            "command": "/usr/bin/make",
            "group": "build",
            "args": [
                "-j8"
            ]
        },
        {
            "type": "shell",
            "label": "gen-and-build",
            "detail": "Generates new makefile and then makes the project",
            "command": "/usr/bin/qmake ${workspaceFolder}/quantum-engine.pro && make -j8",
            "group": "build"
        },
    ]
}